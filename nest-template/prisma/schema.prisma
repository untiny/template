generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator kysely {
  provider = "prisma-kysely"
  fileName = "kysely.generated.d.ts"
}

model User {
  id          Int      @id @default(autoincrement())
  create_time DateTime @default(now())
  update_time DateTime @updatedAt
  email       String   @unique
  name        String?

  @@map("users")
}
